#include <iostream>
using namespace std;

int hw2_part1(int n)
{
int result = n % 10;
while (n != 0)
{
n = n / 10;
if (n > 0)
result = result * 10 + n % 10;
}
return result;
}

int main()
{
int n;
cout << "ввод n: "; cin >> n;

int ans = hw2_part1(n);
cout << "перевернутое число будет " << ans << endl;
return 0;
}



#include <iostream>
#include <string>
using namespace std;

int main()
{
cout << "ввод числа:\n";
string s;
getline(cin, s);

bool ans = true;
while (s.length() != 0)
{
int n = stoi(s); // convert string to number (int)
ans &= n > 0;
getline(cin, s);
}

if (ans) 
cout << "вывод: все числа положительны\n";
else 
cout << "вывод: не все числа положительны\n";

return 0;
}
